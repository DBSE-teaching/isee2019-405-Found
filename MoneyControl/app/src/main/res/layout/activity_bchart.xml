<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".BChart">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BChart">

        <!-- CHART FOR CATEGORY-->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="400sp" />

        <!-- CHART FOR AMOUNT-->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart2"
            android:layout_width="match_parent"
            android:layout_height="400sp" />

        <!-- CHART FOR TIME-->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart3"
            android:layout_width="match_parent"
            android:layout_height="400sp" />

        <!-- BUTTONS FOR CATEGORY-->

        <Button
            android:id="@+id/button_rent"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="66dp"
            android:layout_toEndOf="@+id/button_food"
            android:background="#AFC5BC"
            android:text="Rent" />

        <Button
            android:id="@+id/button_food"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="66dp"
            android:layout_toEndOf="@+id/button_electricity"
            android:background="#AFC5BC"
            android:text="Food" />
        <Button
            android:id="@+id/button_electricity"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="66dp"
            android:background="#AFC5BC"
            android:text="Electricity" />
        <Button
            android:id="@+id/button_internet"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="65dp"
            android:layout_marginBottom="66dp"
            android:layout_toStartOf="@+id/button_electricity"
            android:background="#AFC5BC"
            android:text="Internet" />

        <Button
            android:id="@+id/button_all"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="295dp"
            android:layout_marginBottom="66dp"
            android:background="#AFC5BC"
            android:text="ALL" />
        <Button
            android:id="@+id/button_pieChart"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="11dp"
            android:background="#AFC5BC"
            android:text="Pie Chart" />

        <!-- BUTTONS FOR AMOUNT-->

        <Button
            android:id="@+id/button_high"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="66dp"
            android:layout_toEndOf="@+id/button_medium"
            android:background="#AFC5BC"
            android:text="500+" />
        <Button
            android:id="@+id/button_medium"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="66dp"
            android:background="#AFC5BC"
            android:text="100-500" />
        <Button
            android:id="@+id/button_low"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="85dp"
            android:layout_marginBottom="66dp"
            android:layout_toStartOf="@+id/button_medium"
            android:background="#AFC5BC"
            android:text="1-99" />


        <!-- BUTTONS FOR TIME-->

        <Button
            android:id="@+id/button_year"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="66dp"
            android:layout_toEndOf="@+id/button_month"
            android:background="#AFC5BC"
            android:text="Year" />
        <Button
            android:id="@+id/button_month"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="66dp"
            android:background="#AFC5BC"
            android:text="Month" />
        <Button
            android:id="@+id/button_week"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="85dp"
            android:layout_marginBottom="66dp"
            android:layout_toStartOf="@+id/button_month"
            android:background="#AFC5BC"
            android:text="Week" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="left|center_horizontal"
        android:layoutDirection="ltr"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>

    <!--android:layout_marginEnd="0dp"-->